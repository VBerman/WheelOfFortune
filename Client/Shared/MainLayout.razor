@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components.Authorization
@using WheelOfFortune.Client.Providers
@inherits LayoutComponentBase
@inject ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthStateProvider
<MudThemeProvider IsDarkMode="@_darkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudIconButton Icon="@Icons.Filled.DarkMode" Color="Color.Inherit" OnClick="ChangeDarkMode" />
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudIconButton Icon="@Icons.Filled.VerifiedUser"/>
                <MudLink Color=Color.Secondary Style="margin-left:5px" onclick="@(() => ((ApiAuthenticationStateProvider) AuthStateProvider).MarkUserAsLoggedOut())">Выйти</MudLink>
            </Authorized>
            <NotAuthorized>
                <MudLink Color=Color.Secondary Href="/login">Войти</MudLink>
                <MudLink Color=Color.Secondary Style="margin-left:5px" Href="/registration">Зарегистрироваться</MudLink>
            </NotAuthorized>
        </AuthorizeView>
        
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">WheelOfFortune</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _darkMode;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override async Task OnInitializedAsync()
    {
        _darkMode = await LocalStorage.GetItemAsync<bool>("DarkMode");
    }

    void ChangeDarkMode()
    {
        _darkMode = !_darkMode;
        LocalStorage.SetItemAsync<bool>("DarkMode", _darkMode);
    }


}